<h1><%= link_to "All", '/lihat' %></h1>

<% Category.all.each do |category| %>
                <%= link_to category.name, "/lihat?category=#{category.id}" %>
<% end %>
  <h1>Product For Sale</h1>
  
  <hr>
 
  <div class="container">
    <div class="row">
        <% @products.each do |product| %>
          <div class="col-md-3">
            <div class="thumbnail">
              <%= link_to (image_tag product.image.url(:medium)),product_path(product) %>
              <div class="caption">
                <h3><%= product.name %></h3><br />
                <h3><%= data_currency(product.price) %></h3>
               
              </div>
            </div>
          </div>
        <% end %>    
      </div>
      <div class="col-md-12 text-center">
    </div>
